<odoo>
        <record id="hr_hospital_visit_tree" model="ir.ui.view">
            <field name="name">hr.hospital.visit.tree ()</field>
            <field name="model">hr.hospital.visit</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                    <field name="visit_datetime" widget="datetime"/>
                    <field name="state"/>
                    <field name="visited_datetime"/>
                </tree>
            </field>
        </record>

        <record id="hr_hospital_visit_form" model="ir.ui.view">
            <field name="name">hr.hospital.visit.form ()</field>
            <field name="model">hr.hospital.visit</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="patient_id"/>
                                <field name="doctor_id"/>
                                <field name="visit_datetime" widget="datetime"/>
                                <field name="diagnosis_ids" widget="many2many_tags" readonly="1"/>
                                <field name="visited_datetime" readonly="True"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_hospital_visit_calendar" model="ir.ui.view">
            <field name="name">hr.hospital.visit.calendar ()</field>
            <field name="model">hr.hospital.visit</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <calendar mode="month" date_start="visit_datetime">
                    <field name="doctor_id" filters="1"/>
                    <field name="patient_id" filters="1"/>
                </calendar>
            </field>
        </record>

        <record id="hr_hospital_visit_pivot" model="ir.ui.view">
            <field name="name">hr.hospital.visit.pivot (hr_hospital_visit)</field>
            <field name="model">hr.hospital.visit</field>
            <field name="priority">50</field>
            <field name="arch" type="xml">
                <pivot display_quantity="1">
                    <field name="state" type="col"/>
                    <field name="visit_datetime" interval="month" type="col"/>
                    <field name="doctor_id" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="hr_hospital_visit_search" model="ir.ui.view">
            <field name="name">hr.hospital.visit.search (hr_hospital_visit)</field>
            <field name="model">hr.hospital.visit</field>
            <field name="arch" type="xml">
                <search string="Filters">
                    <group expand="0" string="Group By">
                        <filter name="state" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_hr_hospital_visit_window" model="ir.actions.act_window">
            <field name="name">Visit</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.visit</field>
            <field name="view_mode">tree,form,pivot,calendar</field>
        </record>

        <menuitem id="hr_hospital_menu_visit"
                  action="action_hr_hospital_visit_window"
                  parent="hr_hospital_main_menu"
                  name="Visit" sequence="400"/>

</odoo>
