<odoo>
        <record id="hr_hospital_doctor_tree" model="ir.ui.view">
            <field name="name">hr.hospital.doctor.tree ()</field>
            <field name="model">hr.hospital.doctor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="d_is_intern"/>
                    <field name="gender"/>
                    <field name="phone"/>
                    <field name="d_specialty_id"/>
                    <field name="d_main_doctor_id"/>
                    <field name="d_intern_ids"/>
                </tree>
            </field>
        </record>

        <record id="hr_hospital_doctor_form" model="ir.ui.view">
            <field name="name">hr.hospital.doctor.form ()</field>
            <field name="model">hr.hospital.doctor</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="%(hr_hospital.hr_hospital_change_doctor_wizard_action)d"
                                string="Change doctor" type="action"/>
                        <button name="%(hr_hospital.hr_hospital_diagnosis_wizard_action)d"
                                string="Diagnosis" type="action"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="photo" widget='image' class="oe_avatar m-0"
                                       options='{"zoom": true, "preview_image":"avatar_256"}'/>
                                <field name="name" readonly ="True"/>
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="gender"/>
                                <field name="phone"/>
                            </group>
                            <group>
                                <field name="d_specialty_id"/>
                                <field name="d_is_intern"/>
                                <field name="d_main_doctor_id" invisible="not d_is_intern"/>
                                <field name="d_main_doctor_id_specialty" invisible="not d_is_intern"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="page_intern_ids" string="Interns">
                                <field name="d_intern_ids" readonly="True" mode="kanban"/>
                            </page>
                            <page name="page_patient_ids" string="Patients">
                                <field name="d_patient_ids" readonly="True"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="hr_hospital_doctor_kanban" model="ir.ui.view">
            <field name="name">hr.hospital.doctor.kanban (hr_hospital_doctor)</field>
            <field name="model">hr.hospital.doctor</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="d_specialty_id"
                        records_draggable="False" archivable="False">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div>
                                    <div>
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    </div>
                                    <div>
                                        <strong class="o_kanban_record_title"><field name="d_specialty_id"/></strong>
                                    </div>
                                </div>
                                <div>
                                  <field name="d_visit_ids" widget="many2many_tags"/>
                                </div>
                                <button type="object"
                                        name="create_visit_for_doctor"
                                        class="btn btn-primary"
                                        style="margin-top: 10px;">
                                    Записаться
                                </button>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="hr_hospital_doctor_search" model="ir.ui.view">
            <field name="name">hr.hospital.doctor.search (hr_hospital_doctor)</field>
            <field name="model">hr.hospital.doctor</field>
            <field name="arch" type="xml">
                <search string="Filters">
                    <filter string="Interns" name="interns" domain="[('d_is_intern', '=', True)]"/>
                    <filter string="Mentors" name="mentors" domain="[('d_is_intern', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_hr_hospital_doctor_window" model="ir.actions.act_window">
            <field name="name">Doctor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.doctor</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <menuitem id="hr_hospital_menu_doctor"
                  action="action_hr_hospital_doctor_window"
                  parent="hr_hospital_main_menu"
                  name="Doctor" sequence="200"/>

</odoo>
