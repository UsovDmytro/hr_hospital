<odoo>
        <record id="hr_hospital_diagnosis_tree" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.tree ()</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="visit_id"/>
                    <field name="disease_id"/>
                    <field name="description"/>
                    <field name="approved"/>
                </tree>
            </field>
        </record>

        <record id="hr_hospital_diagnosis_form" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.form ()</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="visit_id"/>
                                <field name="disease_id"/>
                                <field name="description"/>
                                <field name="approved_visible" invisible="1"/>
                                <field name="approved" invisible = "not approved_visible"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_hospital_diagnosis_pivot" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.pivot (hr_hospital_diagnosis)</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="priority">50</field>
            <field name="arch" type="xml">
                <pivot display_quantity="1">
                    <field name="visit_datetime" interval="year" type="col"/>
                    <field name="visit_datetime" interval="month" type="col"/>
                    <field name="disease_id" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="hr_hospital_diagnosis_graph" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.graph (hr_hospital_diagnosis)</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="priority">60</field>
            <field name="arch" type="xml">
                <graph stacked="0">
                    <field name="visit_datetime" interval="month"/>
                    <field name="disease_id" type="row"/>
                </graph>
            </field>
        </record>

        <record id="hr_hospital_diagnosis_search" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.search (hr_hospital_diagnosis)</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="arch" type="xml">
                <search string="Filters">
                    <searchpanel>
                        <field name="disease_id" string="Filter by disease" select="one" hierarchize="1"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="action_hr_hospital_diagnosis_window" model="ir.actions.act_window">
            <field name="name">Diagnosis</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.hospital.diagnosis</field>
            <field name="view_mode">tree,form,pivot,graph</field>
        </record>

        <menuitem id="hr_hospital_menu_diagnosis"
                  action="action_hr_hospital_diagnosis_window"
                  parent="hr_hospital_main_menu"
                  name="Diagnosis" sequence="500"/>

</odoo>
