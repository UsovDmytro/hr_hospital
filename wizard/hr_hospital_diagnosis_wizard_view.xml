<odoo>

    <record id="hr_hospital_diagnosis_wizard" model="ir.ui.view">
        <field name="name">hr.hospital.diagnosis.wizard.form</field>
        <field name="model">hr.hospital.diagnosis.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="doctor_ids" widget="many2many_tags" />
                        <field name="disease_ids" widget="many2many_tags" />
                    </group>
                </group>
                <footer>
                    <button name="action_refresh_pivot" type="object" string="Сформировать" class="btn-primary" />
                    <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_hospital_diagnosis_wizard_action" model="ir.actions.act_window">
        <field name="name">Diagnosis</field>
        <field name="res_model">hr.hospital.diagnosis.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>